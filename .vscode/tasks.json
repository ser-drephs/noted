{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows (Release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--target",
                "x86_64-pc-windows-gnu",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--target",
                "x86_64-pc-windows-gnu"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Coverage",
            "type": "shell",
            "command": "cargo",
            "args": [
                "tarpaulin",
                "--out 'Lcov'"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Coverage (HTML)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "tarpaulin",
                "--out",
                "Html"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "cargo test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test",
            "label": "Test"
        }
    ]
}