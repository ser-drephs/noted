{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Coverage",
            "type": "shell",
            "command": "./eng/build.sh -test -coverage -lcov",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Coverage (HTML)",
            "type": "shell",
            "command": "./eng/build.sh -test -coverage",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "./eng/build.sh -build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "./eng/build.sh -rebuild",
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "./eng/build.sh -test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true,
            }
        },
        {
            "label": "Publish (Windows)",
            "type": "shell",
            "command": "./eng/build.sh -build -publish -windows",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Publish (Linux)",
            "type": "shell",
            "command": "./eng/build.sh -build -publish -linux",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}